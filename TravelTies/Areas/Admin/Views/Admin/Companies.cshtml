<!-- Companies/Index.cshtml -->
@model TravelTies.Areas.Admin.ViewModels.CompanyManagementViewModel
@{
    ViewData["Title"] = "Company Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Company Management</h1>
            <p class="text-gray-600 mt-1">Manage all registered companies</p>
        </div>
        <a asp-action="CreateCompany" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Company
        </a>
    </div>

    <!-- Filters Card -->
    <div class="card bg-white shadow-lg">
        <div class="card-body">
            <form method="get" asp-action="Companies" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">Search</span>
                        </label>
                        <input type="text" name="search" value="@Model.SearchTerm" 
                               placeholder="Company name or email..." 
                               class="input input-bordered bg-white" />
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">From Date</span>
                        </label>
                        <input type="date" name="from" value="@Model.FromDate?.ToString("yyyy-MM-dd")" 
                               class="input input-bordered bg-white" />
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">To Date</span>
                        </label>
                        <input type="date" name="to" value="@Model.ToDate?.ToString("yyyy-MM-dd")" 
                               class="input input-bordered bg-white" />
                    </div>
                </div>

                <div class="flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a asp-action="Companies" class="btn btn-outline">
                        <i class="fas fa-redo"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Companies Table -->
    <div class="card bg-white shadow-lg">
        <div class="card-body overflow-x-auto">
            @if (!Model.Companies.Any())
            {
                <div class="text-center py-12">
                    <i class="fas fa-building text-6xl text-gray-300 mb-4"></i>
                    <p class="text-gray-500 text-lg">No companies found</p>
                </div>
            }
            else
            {
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th class="bg-gray-100">Avatar</th>
                            <th class="bg-gray-100">Company Name</th>
                            <th class="bg-gray-100">Email</th>
                            <th class="bg-gray-100">Contact</th>
                            <th class="bg-gray-100">Description</th>
                            <th class="bg-gray-100">Created</th>
                            <th class="bg-gray-100">Status</th>
                            <th class="bg-gray-100">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var company in Model.Companies)
                        {
                            <tr class="hover">
                                <td>
                                    <div class="avatar">
                                        <div class="w-12 h-12 rounded-full">
                                            <img src="@(company.UserAvatar ?? Url.Content("~/images/default-avatar.png"))" 
                                                 alt="@company.UserName" />
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="font-medium">@company.UserName</div>
                                    <div class="badge badge-sm badge-info">Company</div>
                                </td>
                                <td>
                                    <div class="text-sm">@company.Email</div>
                                </td>
                                <td>
                                    <div class="text-sm">@(string.IsNullOrEmpty(company.ContactInfo) ? "N/A" : company.ContactInfo.Substring(0, Math.Min(20, company.ContactInfo.Length)) + "...")</div>
                                </td>
                                <td>
                                    <div class="text-sm">@(string.IsNullOrEmpty(company.Description) ? "N/A" : company.Description.Substring(0, Math.Min(30, company.Description.Length)) + "...")</div>
                                </td>
                                <td>
                                    <div class="text-sm">@(company.CreatedDate?.ToString("dd/MM/yyyy") ?? "N/A")</div>
                                </td>
                                <td>
                                    @if (company.IsBanned)
                                    {
                                        <span class="badge badge-error">Banned</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">Active</span>
                                    }
                                </td>
                                <td>
                                    <div class="flex gap-2">
                                        <button onclick="confirmBanCompany('@company.Id', '@(company.IsBanned ? "unban" : "ban")')" 
                                                class="btn btn-sm @(company.IsBanned ? "btn-success" : "btn-warning")">
                                            <i class="fas @(company.IsBanned ? "fa-unlock" : "fa-ban")"></i>
                                        </button>

                                        <button onclick="confirmDeleteCompany('@company.Id')" 
                                                class="btn btn-sm btn-error">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="flex justify-center">
            <div class="join">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Companies" 
                       asp-route-page="@i"
                       asp-route-search="@Model.SearchTerm"
                       asp-route-from="@Model.FromDate?.ToString("yyyy-MM-dd")"
                       asp-route-to="@Model.ToDate?.ToString("yyyy-MM-dd")"
                       class="join-item btn @(i == Model.CurrentPage ? "btn-active" : "")">
                        @i
                    </a>
                }
            </div>
        </div>
    }
</div>

<!-- Ban/Unban Modal -->
<dialog id="banModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg" id="banTitle"></h3>
        <p class="py-4" id="banMessage"></p>
        <div class="modal-action">
            <form id="banForm" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="banCompanyId" name="companyId" />
                <button type="submit" class="btn btn-primary">Confirm</button>
                <button type="button" class="btn" onclick="banModal.close()">Cancel</button>
            </form>
        </div>
    </div>
</dialog>

<!-- Delete Modal -->
<dialog id="deleteModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg text-error">Confirm Delete</h3>
        <p class="py-4">Are you sure you want to delete this company? All associated tours will be affected.</p>
        <div class="modal-action">
            <form id="deleteForm" method="post" asp-action="DeleteCompany">
                @Html.AntiForgeryToken()
                <input type="hidden" id="deleteCompanyId" name="companyId" />
                <button type="submit" class="btn btn-error">Delete</button>
                <button type="button" class="btn" onclick="deleteModal.close()">Cancel</button>
            </form>
        </div>
    </div>
</dialog>

@section Scripts {
    <script>
        function confirmBanCompany(companyId, action) {
            const modal = document.getElementById('banModal');
            const form = document.getElementById('banForm');
            const title = document.getElementById('banTitle');
            const message = document.getElementById('banMessage');
            const idInput = document.getElementById('banCompanyId');
            
            title.textContent = action === 'ban' ? 'Confirm Ban Company' : 'Confirm Unban Company';
            message.textContent = action === 'ban' 
                ? 'Are you sure you want to ban this company?' 
                : 'Are you sure you want to unban this company?';
            form.action = '@Url.Action("BanCompany")';
            idInput.value = companyId;
            modal.showModal();
        }

        function confirmDeleteCompany(companyId) {
            const modal = document.getElementById('deleteModal');
            document.getElementById('deleteCompanyId').value = companyId;
            modal.showModal();
        }
    </script>
}
@model TravelTies.Areas.Customer.Models.BookingCartViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Giỏ hàng";
    string fmt(decimal x) => x.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"));
}

<div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold flex items-center text-blue-700">
                <i class="fa-solid fa-cart-shopping"></i>   Giỏ hàng
            </h1>
            <p class="text-muted-foreground mt-1 text-gray-700">@Model.Tickets.Count tour trong giỏ hàng</p>
        </div>

        <form method="post" asp-action="ApplyCoupon" class="flex items-center space-x-3">
            @Html.AntiForgeryToken()
            <input name="couponCode" placeholder="Mã giảm giá" class="input input-bordered bg-white text-black" />
            <button type="submit" class="btn btn-outline bg-white text-black border-2 border-black">Áp dụng</button>
        </form>
    </div>

    @if (TempData["CouponError"] != null)
    {
        <div class="alert alert-error mb-4 text-red-600">@TempData["CouponError"]</div>
    }
    @if (TempData["CouponSuccess"] != null)
    {
        <div class="alert alert-success mb-4 text-green-600">@TempData["CouponSuccess"]</div>
    }
    @if (TempData["CartError"] != null)
    {
        <div class="alert alert-error mb-4 text-red-600">@TempData["CartError"]</div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Tickets list -->
        <div class="lg:col-span-2 space-y-6">
            @foreach (var t in Model.Tickets)
            {
                <div class="card">
                    <div class="card-body p-0">
                        <div class="flex flex-col md:flex-row">
                            <div class="md:w-48 h-48 md:h-auto">
                                @if (!string.IsNullOrEmpty(t.PictureFirstUrl))
                                {
                                    <img src="@t.PictureFirstUrl" alt="@t.TourName" class="w-full h-full object-cover" />
                                }
                                else
                                {
                                    <div class="w-full h-full bg-gray-100 flex items-center justify-center text-gray-400">
                                        No image
                                    </div>
                                }
                            </div>

                            <div class="flex-1 p-6">
                                <div class="flex flex-col md:flex-row md:items-start justify-between">
                                    <div class="flex-1">
                                        <h3 class="font-semibold mb-2 text-lg text-black">@t.TourName</h3>

                                        <div class="flex items-center space-x-4 text-sm text-gray-700 mb-3">
                                            <span class="flex items-center">
                                                <svg class="h-4 w-4 mr-1"><use href="#map-pin"/></svg>
                                                @t.Destination
                                            </span>
                                            <span class="flex items-center">
                                                <svg class="h-4 w-4 mr-1"><use href="#calendar"/></svg>
                                                @t.TourDate.ToString("dd/MM/yyyy")
                                            </span>
                                            <span class="flex items-center">
                                                <svg class="h-4 w-4 mr-1"><use href="#users"/></svg>
                                                @t.NumberOfSeats người
                                            </span>
                                        </div>

                                        <div class="text-sm text-gray-700">
                                            Giá / người: <strong>@fmt(t.PricePerPerson)</strong>
                                        </div>
                                    </div>

                                    <div class="flex flex-col items-end space-y-3 mt-4 md:mt-0 md:ml-6">
                                        <div class="text-right">
                                            <div class="flex items-center space-x-2">
                                                <span class="text-lg font-bold text-primary">@fmt(t.TicketPrice)</span>
                                            </div>
                                            <div class="text-xs text-gray-700">@fmt(t.PricePerPerson) / người × @t.NumberOfSeats</div>
                                        </div>

                                        <div class="flex space-x-2">
                                            <form method="post" asp-action="CancelTicket" onsubmit="return confirm('Bạn có chắc muốn huỷ vé này?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="ticketId" value="@t.TicketId" />
                                                <button type="submit" class="btn btn-outline btn-sm text-destructive">
                                                    Huỷ
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Summary -->
        <div>
            <div class="card sticky top-24">
                <div class="card-body">
                    <h3 class="text-lg font-semibold text-black">Tóm tắt đơn hàng</h3>
                    <div class="mt-4">
                        <div class="flex justify-between text-gray-700">
                            <span>Tạm tính (@Model.Tickets.Count)</span>
                            <span>@fmt(Model.Subtotal)</span>
                        </div>

                        @if (Model.DiscountPercent > 0)
                        {
                            <div class="flex justify-between text-green-600 mt-2">
                                <span>Giảm giá (@Model.DiscountPercent%)</span>
                                <span>-@fmt(Model.DiscountAmount)</span>
                            </div>
                        }

                        <div class="flex justify-between mt-2">
                            <span class="text-gray-700">Phí dịch vụ</span>
                            <span class="text-green-600">Miễn phí</span>
                        </div>

                        <div class="divider my-4"></div>

                        <div class="flex justify-between text-lg font-semibold">
                            <span class="text-black">Tổng cộng</span>
                            <span class="text-primary">@fmt(Model.FinalTotal)</span>
                        </div>

                        <div class="mt-4 space-y-2">
                            <form method="post" asp-action="Checkout">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary w-full">Thanh toán</button>
                            </form>

                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline w-full bg-white text-black">Tiếp tục mua sắm</a>
                        </div>

                        <div class="mt-4 text-xs text-gray-700 text-center p-3 bg-muted/50 rounded-lg">
                            <div class="mb-1">Thanh toán an toàn</div>
                            <div>Thông tin của bạn được bảo mật.</div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.CouponCode))
                        {
                            <div class="mt-3 text-sm text-green-600">Mã áp dụng: <strong>@Model.CouponCode</strong> (@Model.DiscountPercent%)</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Small inline icons as symbols (or use your icon method) -->
<svg style="display:none">
    <symbol id="map-pin" viewBox="0 0 24 24"><path d="M12 2C8 2 5 5.5 5 9.5c0 5.25 7 12.5 7 12.5s7-7.25 7-12.5C19 5.5 16 2 12 2z"/></symbol>
    <symbol id="calendar" viewBox="0 0 24 24"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/></symbol>
    <symbol id="users" viewBox="0 0 24 24"><path d="M16 11a4 4 0 1 0-8 0"/></symbol>
</svg>

@model IEnumerable<TravelTies.Areas.Customer.Models.TicketListItemViewModel>
@{
    ViewData["Title"] = "Vé của tôi";
    Func<decimal, string> FormatPrice = p => string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:N0}đ", p);
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-4 text-green-500">Vé đã đặt</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success mb-4">@TempData["Message"]</div>
    }

    <div class="grid grid-cols-1 gap-4">
        @if (!Model.Any())
        {
            <div class="card">
                <div class="card-body">
                    <p class="text-gray-700">Bạn chưa đặt vé nào.</p>
                    <a asp-area="" asp-controller="Tour" asp-action="Index" class="btn btn-primary mt-3">Xem Tours</a>
                </div>
            </div>
        }
        else
        {
            foreach (var t in Model)
            {
                <div class="card shadow-lg hover:shadow-2xl">
                    <div class="card-body flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
                        <div class="flex items-center gap-4">
                            <div class="w-28 h-20 rounded-md overflow-hidden bg-gray-100">
                                <img src="@(t.TourPicture ?? Url.Content("~/images/banahill.png"))" alt="@t.TourName" class="w-full h-full object-cover" />
                            </div>

                            <div>
                                <a asp-action="Details" asp-route-id="@t.TicketId" class="text-lg text-black font-semibold hover:text-primary">@t.TourName</a>
                                <div class="text-sm text-muted-foreground mt-1 text-gray-700">
                                    Ngày: @t.TourDate.ToString("dd/MM/yyyy") &nbsp; • &nbsp;
                                    Ghế: @t.NumberOfSeats
                                </div>
                                <div class="text-sm text-muted-foreground mt-1 text-gray-700">
                                    Trạng thái: 
                                    @if (t.IsPayed) { <span class="badge badge-success">Đã thanh toán</span> } 
                                    else { <span class="badge badge-warning">Chưa thanh toán</span> }
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center gap-4">
                            <div class="text-right">
                                <div class="font-bold text-blue-600">@FormatPrice(t.TicketPrice)</div>
                                <div class="text-sm text-gray-700">Mã đơn: @(t.PaymentOrderCode?.ToString() ?? "-")</div>
                            </div>

                            <div class="flex flex-col md:flex-row gap-2">
                                <a asp-action="Details" asp-route-id="@t.TicketId" class="btn btn-outline bg-blue-500 text-white hover:btn-primary">Chi tiết</a>
                                <form asp-action="Cancel" asp-route-id="@t.TicketId" method="post" onsubmit="return confirm('Bạn có chắc muốn huỷ vé này?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-error btn-outline">Huỷ</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@model TravelTies.Areas.Company.ViewModels.TourListItemVm
@{
    ViewData["Title"] = "Chi tiết Tour";
}
<section class="space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-semibold">@Model.TourName</h1>
        <a asp-area="Company" asp-controller="Tours" asp-action="Index" class="text-sm underline">Quay lại</a>
    </div>

    <div class="bg-white border rounded-xl overflow-hidden">
        @if (!string.IsNullOrWhiteSpace(Model.Picture))
        {
            <img src="@Model.Picture" alt="@Model.TourName" class="w-full h-64 object-cover" />
        }
        <div class="p-6 space-y-3">
            <div class="text-slate-600">@Model.Destination • @Model.Start.ToString("dd/MM/yyyy") - @Model.End.ToString("dd/MM/yyyy")</div>
            <div class="flex items-center gap-6 text-sm">
                <div><span class="text-slate-500">Giá:</span> <span class="font-medium">@Model.Price.ToString("N0") đ</span></div>
                <div><span class="text-slate-500">Số chỗ:</span> <span class="font-medium">@Model.NumberOfPassenger</span></div>
                <div><span class="text-slate-500">Đã đặt:</span> <span class="font-medium">@Model.Booked</span></div>
                <div><span class="text-slate-500">Đánh giá TB:</span> <span class="font-medium">@Model.Rating.ToString("0.0")</span></div>
                <div><span class="text-slate-500">Lượt xem:</span> <span class="font-medium">@Model.Views</span></div>
            </div>
            <div>
                <span class="text-xs px-2 py-1 rounded-full border
                    @(Model.Status == "Đang hoạt động" ? "bg-emerald-50 text-emerald-700" :
                                            Model.Status == "Đầy chỗ" ? "bg-orange-50 text-orange-700" : "bg-slate-100")">@Model.Status</span>
            </div>
        </div>
    </div>
</section>
